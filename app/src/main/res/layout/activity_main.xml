<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- This is the main content -->

    <LinearLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbar"
        android:orientation="vertical" >

        <!-- below is the top half of the screen -->

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:background="@color/main_activity_top_bg" >

            <!-- below is the message limit -->


            <net.studymongolian.chimee.MongolViewGroup
                android:id="@+id/mvgMessageOutline"
                android:layout_centerInParent="true"
                android:background="#ffffff"
                android:layout_width="75dp"
                android:layout_height="150dp" >
                <net.studymongolian.chimee.MongolEditText
                    android:id="@+id/etInputWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </net.studymongolian.chimee.MongolViewGroup>
                <!-- below is the message outline -->



        </RelativeLayout>

        <FrameLayout
            android:id="@+id/keyboardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6" >
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>