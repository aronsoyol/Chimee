<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="8dp"
    android:layout_margin="8dp"
    android:orientation="horizontal" >

    <!-- Tallest layout wraps content so main layout can also wrap -->

    <RelativeLayout
        android:id="@+id/mainMenuItemShareFrame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/menu_item"
        android:clickable="true"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ivShareIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_share_black_24dp" />


        <net.studymongolian.chimee.MongolTextView
            android:id="@+id/tvMainMenuItemShare"
            style="@style/AppTheme.MenuTextStyle"
            android:layout_below="@id/ivShareIcon"
            android:text="@string/menu_item_share" />
    </RelativeLayout>

    <!--<View-->
    <!--android:layout_width="1dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/background_material_light" />-->

    <RelativeLayout
        android:id="@+id/mainMenuItemOpenSaveFrame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/menu_item"
        android:clickable="true"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ivOpenSaveIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_folder_open_black_24dp" />

        <net.studymongolian.chimee.MongolTextView
            android:id="@+id/tvMainMenuItemOpenSave"
            style="@style/AppTheme.MenuTextStyle"
            android:layout_below="@id/ivOpenSaveIcon"
            android:text="@string/menu_item_open" />
    </RelativeLayout>

    <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/background_material_light" />-->

    <RelativeLayout
        android:id="@+id/mainMenuItemSettingsFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item"
        android:clickable="true"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ivSettingsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_settings_black_24dp" />

        <net.studymongolian.chimee.MongolTextView
            android:id="@+id/tvMainMenuItemSettings"
            style="@style/AppTheme.MenuTextStyle"
            android:layout_below="@id/ivSettingsIcon"
            android:text="@string/menu_item_settings" />
    </RelativeLayout>
</LinearLayout>