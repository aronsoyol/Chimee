<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:orientation="horizontal" >

    <net.studymongolian.chimee.MongolTextView
        android:id="@+id/tvSettingsKeyboardDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/settings_keyboard_item"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/holo_blue" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/holo_blue" />

    <RelativeLayout
        android:id="@+id/rlSettingsDialogKeyboardAeiou"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/bar_icon"
        android:clickable="true" >

        <net.studymongolian.chimee.MongolTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/keyboard_aeiou"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioButton
            android:id="@+id/rbSettingsKeyboardAeiou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:clickable="false" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#c0c0c0" />

    <RelativeLayout
        android:id="@+id/rlSettingsDialogKeyboardQwerty"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/bar_icon"
        android:clickable="true" >

        <net.studymongolian.chimee.MongolTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/keyboard_qwerty"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioButton
            android:id="@+id/rbSettingsKeyboardQwerty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:clickable="false" />
    </RelativeLayout>

</LinearLayout>