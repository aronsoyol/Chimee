<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- key margin/background -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/keyboard_base_theme" />
        </shape>
    </item>
    
    <!-- shadow line -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/keyboard_keys_normal_shadow" />

            <corners android:radius="2dp" >
            </corners>
        </shape>
    </item>
    
    <!-- key face background -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/keyboard_keys_normal" />

            <corners android:radius="2dp" >
            </corners>
        </shape>
    </item>

</layer-list>